doctype html
html
  head
    meta(name='viewport' content='width=device-width')
    meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
    title
    include style
  body
    table.body(role='presentation' border='0' cellpadding='0' cellspacing='0')
      tbody
        tr
          td
          td.container
            .content
              // START CENTERED WHITE CONTAINER
              table.main(role='presentation')
                // START MAIN AREA
                tbody
                  tr
                    td.wrapper
                      table(role='presentation' border='0' cellpadding='0' cellspacing='0')
                        tbody
                          tr
                            td
                              // CONTENT
                              p Hi #{username}
                              p Forgot your password?
                              p
                                | Click the link below to reset your password!
                              table.btn.btn-primary(role='presentation' border='0' cellpadding='0' cellspacing='0')
                                tbody
                                  tr
                                    td(align='left')
                                      table(role='presentation' border='0' cellpadding='0' cellspacing='0')
                                        tbody
                                          tr
                                            td
                                              a(href='<%= url %>' target='_blank') Reset your password
                              p
                                | If you didn&apos;t forget your password, please
                                | ignore this email!
                              // END CONTENT
              // START FOOTER
              .footer
                table(role='presentation' border='0' cellpadding='0' cellspacing='0')
                  tbody
                    tr
                      td.content-block
                        span.apple-link
                          | YourCompanyHere, 123 Nowhere Road, San Francisco CA
                          | 99999
                        br
                        |                         Don&apos;t like these emails? 
                        a(href='#') Unsubscribe
